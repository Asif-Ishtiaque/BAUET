<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Chat">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chat_header" />

    <ImageView
        android:id="@+id/profile_picture_login"
        android:layout_width="43dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-47dp"
        android:translationX="-150dp"
        android:translationY="15dp"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/product_sans"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-47dp"
        android:translationX="-85dp"
        android:translationY="14dp"
        android:text="@string/bChat"
        android:textColor="@color/blurry_white"
        android:textSize="30sp"
       />

    <ListView
        android:id="@+id/chatView"
        android:layout_width="398dp"
        android:layout_height="730dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

    <LinearLayout
        android:id="@+id/listFooter"
        android:layout_width="380dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:gravity="bottom"


        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="326dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/ic_chat_header"
            android:fontFamily="@font/product_sans"
            android:hint="@string/prompt_msg"
            android:imeOptions="actionUnspecified"
            android:inputType="textCapSentences|textAutoCorrect"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/semi_white"
            tools:ignore="RtlCompat" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:src="@drawable/ic_send" />
    </LinearLayout>


</RelativeLayout>