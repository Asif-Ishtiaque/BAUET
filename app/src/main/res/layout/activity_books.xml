<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_library_background"
    tools:context=".books">


    <ImageView
        android:id="@+id/header"
        android:layout_width="357dp"
        android:layout_height="123dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chat_header" />

    <TextView
        android:id="@+id/Welcome_user"
        android:layout_width="334dp"
        android:layout_height="32dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/WTTHL"
        android:textColor="@color/semi_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <TextView
        android:id="@+id/library_user_name"
        android:layout_width="322dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/welcome_user_name"
        android:textAlignment="center"
        android:textColor="@color/semi_black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_user" />


    <TextView
        android:id="@+id/pre_read"
        android:layout_width="269dp"
        android:layout_height="37dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/Top_book"
        android:textColor="@color/semi_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageButton
        android:id="@+id/book_01"
        android:layout_width="357dp"
        android:layout_height="242dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pre_read"
        app:srcCompat="@drawable/ic_chat_header" />

    <ImageView
        android:id="@+id/book_01_cover"
        android:layout_width="157dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/book_01"
        app:layout_constraintTop_toTopOf="@+id/book_01"
        app:srcCompat="@drawable/book_01" />


    <TextView
        android:id="@+id/book_01_name"
        android:layout_width="174dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/book_01_info"
        android:textAlignment="center"
        android:textColor="@color/semi_black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/book_01_cover"
        app:layout_constraintTop_toTopOf="@+id/book_01" />


    <TextView
        android:id="@+id/book_01_info"
        android:layout_width="175dp"
        android:layout_height="123dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/book_01_info_b"
        android:textColor="@color/semi_black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/book_01_cover"
        app:layout_constraintTop_toBottomOf="@+id/book_01_name" />


    <TextView
        android:id="@+id/book_all0_edition"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/book_01_edition"
        android:textColor="@color/semi_black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/book_01_cover"
        app:layout_constraintTop_toBottomOf="@+id/book_01_info" />

    <TextView
        android:id="@+id/all_books"
        android:layout_width="112dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/all_books"
        android:textColor="@color/semi_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_01" />


    <ImageButton
        android:id="@+id/book_02"
        android:layout_width="172dp"
        android:layout_height="237dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_cate_01"
        app:srcCompat="@drawable/ic_chat_header" />


    <ImageButton
        android:id="@+id/book_03"
        android:layout_width="172dp"
        android:layout_height="237dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/book_02"
        app:layout_constraintStart_toEndOf="@+id/book_02"
        app:srcCompat="@drawable/ic_chat_header" />

    <ImageView
        android:id="@+id/book_cate_01"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_books"
        app:srcCompat="@drawable/ic_chat_header" />

    <ImageView
        android:id="@+id/book_cate_02"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/book_cate_01"
        app:layout_constraintStart_toEndOf="@+id/book_cate_01"
        app:srcCompat="@drawable/ic_chat_header" />


    <ImageView
        android:id="@+id/book_cate_03"
        android:layout_width="101dp"
        android:layout_height="29dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/book_cate_02"
        app:layout_constraintStart_toEndOf="@+id/book_cate_02"
        app:srcCompat="@drawable/ic_chat_header" />


    <TextView
        android:id="@+id/text_01_books"
        android:layout_width="95dp"
        android:layout_height="18dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/books_text_01"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/book_cate_01"
        app:layout_constraintTop_toTopOf="@+id/book_cate_01" />

    <TextView
        android:id="@+id/text_02_books"
        android:layout_width="95dp"
        android:layout_height="18dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/books_text_02"
        android:textAlignment="center"
        android:textColor="@color/semi_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/book_cate_02"
        app:layout_constraintTop_toTopOf="@+id/book_cate_02" />


    <TextView
        android:id="@+id/text_03_books"
        android:layout_width="74dp"
        android:layout_height="16dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/books_text_03"
        android:textAlignment="center"
        android:textColor="@color/semi_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/book_cate_03"
        app:layout_constraintTop_toTopOf="@+id/book_cate_03" />


    <ImageView
        android:id="@+id/book_02_cover"
        android:layout_width="143dp"
        android:layout_height="191dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/book_02"
        app:layout_constraintTop_toTopOf="@+id/book_02"
        app:srcCompat="@drawable/books_02" />

    <TextView
        android:id="@+id/read_now_01"
        android:layout_width="74dp"
        android:layout_height="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/read"
        android:textAlignment="center"
        android:textColor="@color/semi_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/book_02_cover"
        app:layout_constraintTop_toBottomOf="@+id/book_02_cover" />


    <TextView
        android:id="@+id/read_now_02"
        android:layout_width="74dp"
        android:layout_height="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/read"
        android:textAlignment="center"
        android:textColor="@color/semi_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/book_03"
        app:layout_constraintTop_toBottomOf="@+id/book_03_cover" />

    <ImageView
        android:id="@+id/book_03_cover"
        android:layout_width="138dp"
        android:layout_height="186dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/book_03"
        app:layout_constraintTop_toTopOf="@+id/book_03"
        app:srcCompat="@drawable/books_03" />
</androidx.constraintlayout.widget.ConstraintLayout>