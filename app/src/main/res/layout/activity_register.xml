<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".Register">


    <ImageView
        android:id="@+id/bauet_logo"
        android:layout_width="290dp"
        android:layout_height="266dp"
        android:layout_marginStart="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bauet" />


    <TextView
        android:id="@+id/Welcome_user"
        android:layout_width="300dp"
        android:layout_height="28dp"
        android:layout_marginStart="56dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/registerTitle"
        android:textAlignment="center"
        android:textColor="@color/blurry_white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bauet_logo" />

    <TextView
        android:id="@+id/register_email"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/EMAIL"
        android:textAlignment="center"
        android:textColor="@color/blurry_white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/Welcome_user"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_user" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/ic_login_register"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />


    <TextView
        android:id="@+id/register_username_title"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/User_Name"
        android:textAlignment="center"
        android:textColor="@color/blurry_white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/ic_login_register"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username_title" />

    <TextView
        android:id="@+id/password"
        android:layout_width="87dp"
        android:layout_height="24dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/PASSWORD"
        android:textAlignment="center"
        android:textColor="@color/blurry_white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/ic_login_register"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <ImageButton
        android:id="@+id/registration_confirm"
        android:layout_width="121dp"
        android:layout_height="45dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="16dp"
        android:onClick="signUp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password"
        app:srcCompat="@drawable/ic_login_register" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="87dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/product_sans"
        android:text="@string/Register"
        android:textAlignment="center"
        android:textColor="@color/semi_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/registration_confirm"
        app:layout_constraintTop_toTopOf="@+id/registration_confirm" />

    <Button
        android:id="@+id/signUP"
        android:layout_width="337dp"
        android:layout_height="92dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:text="@string/regDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_confirm" />


</androidx.constraintlayout.widget.ConstraintLayout>